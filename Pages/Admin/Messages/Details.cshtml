@page
@model BestShop.Pages.Admin.Messages.DetailsModel
@{
}

<h2 class="my-3">Chi tiết tin nhắn</h2>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">ID</label>
	<div class="col-sm-7">
		<input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Id">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Tên người dùng</label>
	<div class="col-sm-7">
		<input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.FirstName @Model.messageInfo.LastName">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Email</label>
	<div class="col-sm-7">
		<input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Email">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Số điện thoại</label>
	<div class="col-sm-7">
		<input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Phone">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Yêu cầu</label>
	<div class="col-sm-7">
		<input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Subject">
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Tin nhắn</label>
	<div class="col-sm-7">
		<textarea readonly class="form-control">@Model.messageInfo.Message</textarea>
	</div>
</div>

<div class="row mb-2">
	<label class="col-sm-3 col-form-label">Ngày tạo</label>
	<div class="col-sm-7">
		<input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.CreatedAt">
	</div>
</div>

<div class="offset-sm-3 col-sm-7">
	<a class="btn btn-primary" href="/Admin/Messages/Index" role="button">OK</a>
</div>