@page
@model Bestshop.Pages.Admin.Books.CreateModel
@{
}
<h2 class="my-3">Thêm sách mới</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
	</div>
}
else if (Model.successMessage.Length > 0)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		<strong>@Model.successMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
	</div>
}

<form method="POST" enctype="multipart/form-data">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Tên sách</label>
		<div class="col-sm-6">
			<input class="form-control" asp-for="Title"/>
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Tác giả</label>
		<div class="col-sm-6">
			<input class="form-control" asp-for="Authors" />
			<span asp-validation-for="Authors" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">ISBN</label>
		<div class="col-sm-6">
			<input class="form-control" asp-for="ISBN" />
			<span asp-validation-for="ISBN" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Số trang</label>
		<div class="col-sm-6">
			<input class="form-control" asp-for="NumPages" />
			<span asp-validation-for="NumPages" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Giá</label>
		<div class="col-sm-6">
			<input class="form-control" asp-for="Price" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Thể loại</label>
		<div class="col-sm-6">
			<select class="form-select" asp-for="Category">
				<option value="Other">Other</option>
				<option value="Mathematics">Mathematics</option>
				<option value="Technology">Technology</option>
				<option value="Economics">Economics</option>
				<option value="Medicine">Medicine</option>
				<option value="History">History</option>
			</select>
			<span asp-validation-for="Category" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Mô tả</label>
		<div class="col-sm-6">
			<textarea class="form-control" asp-for="Description"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Ảnh</label>
		<div class="col-sm-6">
			<input class="form-control" asp-for="ImageFile" />
			<span asp-validation-for="ImageFile" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-gird">
			<button type="submit" class="btn btn-primary">Lưu</button>
		</div>
		<div class="col-sm-3 d-gird">
			<a class="btn btn-outline-primary" href="/Admin/Books/Index" role="button">Trở về</a>
		</div>
	</div>
</form>